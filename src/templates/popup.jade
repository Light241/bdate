.b_popup(ng-show="popupState.isOpen")
    .b_popup_controls
        .b_btn_prev_container
            button.b_popup_btn.b_btn_prev(
            type="button",
            ng-click="popup.goPrevYear()",
            ng-disabled="popup.isFirstYear()"
            )
                | &#9664;
                | &#9664;
            button.b_popup_btn.b_btn_prev(
            type="button",
            ng-click="popup.goPrevMonth()",
            ng-disabled="popup.isFirstMonth()"
            )
                | &#9664;
        .b_popup_month(ng-bind="popup.getMonthName()")
        | &nbsp;
        select.b_popup_year(
        ng-model="popup.selectViewedYear",
        ng-options="year for year in data.years",
        ng-init="popup.selectViewedYear = data.years[0]",
        ng-change="popup.goToYear()"
        )
        .b_btn_next_container
            button.b_popup_btn.b_btn_next(
            type="button",
            ng-click="goNextMonth()",
            ng-disabled="isLastMonth()"
            )
                | &#9654;
            button.b_popup_btn.b_btn_next(
            type="button",
            ng-click="goNextYear()",
            ng-disabled="isLastYear()"
            )
                | &#9654;
                | &#9654;
    table.b_popup_days
        tr
            td.b_popup_day_of_week(ng-repeat="dayOfWeek in ::dateModel.week")
                span(ng-bind="::dayOfWeek")
    table.b_popup_weeks
        tr.b_popup_week
            td.b_popup_day(ng-repeat="day in data.selected.days track by $index", ng-class="{b_popup_today_day_container: day.isToday")
                button.b_popup_day_btn(
                type="button",
                ng-bind="day.num",
                ng-click="popup.selectDate(day)",
                ng-disabled="day.isDisabled",
                ng-class="{b_popup_cur_month_day: !day.isDisabled, b_popup_today_day: day.isToday, b_popup_selected_day: popup.isSelectedDay(day)}"
                )
    .b_popup_today
        button.b_popup_today_btn(
        type="button",
        ng-bind="popup.getToday() | date:data.format",
        ng-click="popup.selectDate(popup.getToday())"
        )