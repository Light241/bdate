.b_popup(ng-show="popupState.isOpen")
    .b_popup_controls
        .b_btn_prev_container
            button.b_popup_btn.b_btn_prev(type="button", ng-click="data.goNextYear(false)", ng-disabled="!bDateUtils.sourceCheckers.year.isYearExist(data.viewedDate.year.number - 1)") <<
            button.b_popup_btn.b_btn_prev(type="button", ng-click="data.goNextMonth(false)", ng-disabled="!bDateUtils.sourceCheckers.month.isPrevMonthExist(data.viewedDate.year.number, data.viewedDate.month.number)") <
        .b_popup_month(ng-bind="data.viewedDate.month.name")
        | &nbsp;
        .b_popup_year(ng-bind="data.viewedDate.year.number")
        .b_btn_next_container
            button.b_popup_btn.b_btn_next(type="button", ng-click="data.goNextMonth(true)", ng-disabled="!bDateUtils.sourceCheckers.month.isNextMonthExist(data.viewedDate.year.number, data.viewedDate.month.number)") >
            button.b_popup_btn.b_btn_next(type="button", ng-click="data.goNextYear(true)", ng-disabled="!bDateUtils.sourceCheckers.year.isYearExist(data.viewedDate.year.number + 1)") >>
    table.b_popup_days
        tr
            td.b_popup_day_of_week(ng-repeat="dayOfWeek in ::data.daysOfWeek.getShorts()")
                span(ng-bind="::dayOfWeek")
    table.b_popup_weeks
        tr.b_popup_week
            td.b_popup_day(ng-repeat="date in data.viewedDate.days track by $index")
                button.b_popup_day_btn(type="button", ng-bind="date.day", ng-click="popup.selectDate(date)", ng-class="{b_popup_cur_month_day: !date.isOtherMonth}")
    .b_popup_today
        | Сегодня
        | &nbsp;
        span(ng-bind="data.today.date | date:data.format")